{
  "name": "touch-deck-app",
  "private": true,
  "version": "1.0.0-rc1",
  "type": "module",
  "scripts": {
    "prepare": "panda codegen",
    "dev": "vite --host",
    "build": "npm run messages:extract && npm run messages:compile && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "publish": "node ./scripts/publish.js",
    "messages:extract": "formatjs extract src/**/messages.ts --out-file default-lang.json --flatten",
    "messages:compile": "formatjs compile default-lang.json --out-file src/locales/en.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ark-ui/react": "5.5.0",
    "@tabler/icons-react": "3.31.0",
    "jsonschema": "1.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-intl": "7.1.11",
    "react-router": "7.5.0",
    "usehooks-ts": "3.1.1",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@formatjs/cli": "6.6.4",
    "@pandacss/dev": "0.53.3",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-interactions": "8.6.12",
    "@storybook/addon-onboarding": "8.6.12",
    "@storybook/blocks": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "4.3.4",
    "eslint": "9.21.0",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-storybook": "0.12.0",
    "formatjs": "0.1.1",
    "gh-pages": "6.3.0",
    "globals": "15.15.0",
    "storybook": "8.6.12",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.24.1",
    "vite": "6.2.0"
  }
}
